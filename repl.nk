[ ]        $: pgStack
root child $: pgRoot

[ "( Q -- )"
  false $: error

  pgRoot new swap slurp $: pgCurrent
  pgCurrent #*died [ =: error ] opens

  [ pgStack pgCurrent hydrate! ] measure $: dt

  error
    [ error reportError ]
    [ pgRoot pgCurrent mergeTables ]
  br

  [ 'In ' dt 'ms' ] here join echo

  pgStack echo
] @: run


loop: [
  '>>> ' readLine
    [ run ]
    [ 'Bye.' echo break ]
  br
]
